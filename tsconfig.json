{
  "extends": "@tsconfig/node18/tsconfig.json",
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "module": "ESNext", // or ES2015, ES2020
    "noImplicitAny": false,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "./dist",
    "resolveJsonModule": false,
    "types": [
      "node"
    ]
  },
  "exclude": ["node_modules"]
}
